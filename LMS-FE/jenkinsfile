pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from your version control system (e.g., Git)
                checkout scm
            }
        }        
        stage('Docker Build') {
            steps {
                sh 'cd LMS-FE && docker build -t frontend'
            }
        }
  
        stage {
            steps{
                sh 'docker run -dt --name fe -p 80:80 frontend'
            }
        }
    }
}
